    <!-- restricted game -->
    <optimization name="60fps_restricted_game" parent="60fps_heavy_game" mode="normal">
        <limit temp="0" profile="gn48" fps="48"/>
        <limit temp="43" profile="gn48" rr="60" fps="48"/>
