<!--
    Game optimizations device config
-->
<game-optimization version="1">

    <devconfig>
        <thermal-sensor>fuse_temp</thermal-sensor>
        <!-- should be removed when stable line branch -->
        <fps-observer>true</fps-observer>
        <!-- TGPA config-->
        <tgpa func="1,2,3,4,5,6,7,8" scene="1,2,3" >true</tgpa>
        <!-- temperatures from low to high -->
        <temp name="0" temp="0" tempClr="-10"/>
        <temp name="35" temp="35" tempClr="26"/>
        <temp name="36" temp="36" tempClr="34"/>
        <temp name="37" temp="37" tempClr="35"/>
        <temp name="38" temp="38" tempClr="36"/>
        <temp name="39" temp="39" tempClr="37"/>
        <temp name="40" temp="40" tempClr="38"/>
        <temp name="41" temp="41" tempClr="39"/>
        <temp name="42" temp="42" tempClr="40"/>
        <temp name="43" temp="43" tempClr="41"/>
        <temp name="44" temp="44" tempClr="42"/>
        <temp name="45" temp="45" tempClr="43"/>
        <temp name="46" temp="46" tempClr="44"/>
        <temp name="47" temp="47" tempClr="45"/>
        <temp name="48" temp="48" tempClr="46"/>
        <temp name="49" temp="49" tempClr="47"/>
        <temp name="50" temp="50" tempClr="48"/>
        <temp name="51" temp="51" tempClr="49"/>
        <!-- cpu profiles from low to high
            MAX_FREQ_CLUSTER_LITTLE_CORE_0 = 0x40804100,
            MIN_FREQ_CLUSTER_LITTLE_CORE_0 = 0x40800100,
            MAX_FREQ_CLUSTER_BIG_CORE_0 = 0x40804000,
            MIN_FREQ_CLUSTER_BIG_CORE_0 = 0x40800000,
            MAX_FREQ_CLUSTER_PRIME_CORE_0 = 0x40804200,
            MIN_FREQ_CLUSTER_PRIME_CORE_0 = 0x40800200,
            CORE_CTL_ENABLE_BIG = 0x41008000,
            CORE_CTL_ENABLE_PRIME  = 0x41008200,
            ASYMCAP_BOOST = 0x43C00000,
        -->

        <profile-adjuster downFpsVar="0.5" downTimeout="10000" upFpsDrop="2" upFpsVar="5"/>
        <profile name="0">0x40800100, 902, 0x40804100, 1555, 0x40804000, 1056, 0x40804200, 1132, 0x43C00000, 1, 0x42C20000, 1, 0x41000000, 0x4</profile>
        <profile name="1">0x40800100, 902, 0x40804100, 1555, 0x40804000, 1286, 0x40804200, 1248, 0x43C00000, 1, 0x42C20000, 1, 0x41000000, 0x4</profile>
        <profile name="2">0x40800100, 902, 0x40804100, 1555, 0x40804000, 1401, 0x40804200, 1478, 0x43C00000, 1, 0x42C20000, 1, 0x41000000, 0x4</profile>
        <profile name="3">0x40800100, 902, 0x40804100, 1555, 0x40804000, 1536, 0x40804200, 1593, 0x43C00000, 1, 0x42C20000, 1, 0x41000000, 0x4</profile>
        <profile name="4">0x40800100, 902, 0x40804100, 1555, 0x40804000, 1785, 0x40804200, 1708, 0x43C00000, 1, 0x42C20000, 1, 0x41000000, 0x4</profile>
        <profile name="5">0x40800100, 902, 0x40804100, 1555, 0x40804000, 1920, 0x40804200, 1843, 0x43C00000, 1, 0x42C20000, 1, 0x41000000, 0x4</profile>
        <profile name="6">0x40800100, 902, 0x40804100, 1555, 0x40804000, 2054, 0x40804200, 1977, 0x43C00000, 1, 0x42C20000, 1, 0x41000000, 0x4</profile>
        <profile name="7">0x40800100, 902, 0x40804100, 1555, 0x40804000, 2188, 0x40804200, 2092, 0x43C00000, 1, 0x42C20000, 1, 0x41000000, 0x4</profile>
        <profile name="gn30">0x40800100, 902, 0x40804100, 1555, 0x40804000, 1401, 0x40804200, 1478, 0x43C00000, 1, 0x42C20000, 1, 0x41000000, 0x4, 0x41000200 0x1</profile>
        <profile name="gn45">0x40800100, 902, 0x40804100, 1555, 0x40804000, 1785, 0x40804200, 1708, 0x43C00000, 1, 0x42C20000, 1, 0x41000000, 0x4, 0x41000200 0x1</profile>
        <profile name="gn60">0x40800100, 902, 0x40804100, 1555, 0x40800000, 940, 0x40804000, 2188, 0x40804200, 2092, 0x43C00000, 1, 0x42C20000, 1, 0x41000000, 0x4, 0x41000200 0x1</profile>
